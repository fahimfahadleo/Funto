<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:theme="@style/AppTheme"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#1A88DA"
        android:text="Coin Status"
        android:textColor="#fff"
        android:textSize="35sp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Coin Price List"
        android:textColor="#000"
        android:layout_margin="@dimen/_8sdp"
        android:id="@+id/coinpricelist"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Coin withdraw price chart"
        android:textColor="#000"
        android:layout_margin="@dimen/_8sdp"
        android:id="@+id/coinwithdrawpricelist"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Sticker price list"
        android:textColor="#000"
        android:layout_margin="@dimen/_8sdp"
        android:id="@+id/stickerpricelist"/>



</LinearLayout>